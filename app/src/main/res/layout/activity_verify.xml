<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyActivity">
    <com.chaos.view.PinView
        android:id="@+id/pv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemCount="6"
        android:textColor="#3F51B5"
        style="@style/PinWidget.PinView"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_verify"
        />
    <TextView
        android:id="@+id/tx_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:visibility="invisible"
        android:textColor="#141D50"
        android:paddingVertical="10dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/pv_code"
        app:layout_constraintLeft_toLeftOf="@id/pv_code"
        />
    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:backgroundTint="#3F51B5"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pv_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>